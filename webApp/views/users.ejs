<html>

<head>
    <meta charset="utf-8" />
</head>

<body>
    <section class="home">
        <h1>Authors</h1>
        <div class="data-table">
            <table border="1" cellpadding="7" cellspacing="7">
                <tr>
                    <th width="50px">ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Biography Title</th>
                    <th>Biography Tone</th>
                </tr>

                <% if (users.length) { 
                    for (var i = 0; i < users.length; i++) { %>
                        <tr>
                            <td><%=users[i].id%></td>
                            <td><%=users[i].firstName%></td>
                            <td><%=users[i].lastName%></td>
                            <td><%=users[i].biographyTitle%></td>
                            <td><%=users[i].biographyTone%></td>
                        </tr>
                    <% } 
                } else { %>
                    <tr>
                        <td colspan="5">No Data</td>
                    </tr>
                <% } %>
            </table>
        </div>
    </section>
</body>

</html>